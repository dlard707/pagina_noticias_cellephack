<!DOCTYPE html>
<html lang="pt-BR" class="h-100">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <!-- CSS bootstrap -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <!-- Bundle JS Bootstrap -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
    <!-- CSS custom -->
    <link rel="stylesheet" href="css/style.css" />
    <!-- Custom JS -->
    <script src="js/script.js" defer></script>
  </head>
  <body class="d-flex flex-column h-100">
    <header class="container-fluid bg-dark sticky-top">
      <nav class="d-flex justify-content-between flex-column flex-sm-row flex-wrap justify-content-center align-center">
        <div>
          <img src="" alt="Logo" />
        </div>
        <div>
          <ul class="nav nav-pills">
            <li>
              <a href="/" class="nav-link text-white" id="menuHome">Home</a> 
            </li>
            <li>
              <a href="/noticias" class="nav-link text-white" id="menuNoticias"
              >Noticias</a>
            </li>
            <li>
              <a href="/admin" class="nav-link text-white" id="menuAdmin">Admin</a
              >
            </li>
            <li>
                <% if (typeof(autorizado) !== 'undefined') { %>
              <a href="/admin/sair" class="nav-link text-white">Sair</a>
                <% } %>
            </li>
          </ul>
        </div>
      </nav>
    </header>
    <main class="mb-4">
        <div class="bg-light p-5 mb-4">
            <div class="container text-center">
                <h1>Seja Bem Vindo</h1>
                <p class="lead">Fique por dentro das ultimas noticias no mundo da tecnologia</p>
            </div>
        </div>

        <!-- -->
        <div class="container">
            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
              <% noticias.forEach(noticia => { %>
                <div class="col">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title"><%= noticia.titulo %></h5>
                            <p class="card-text"><%= noticia.conteudo.substring(0, 50) %> ...</p>
                            <p class="card-text"><small class="text-muted"><%= noticia.data_criacao.toLocaleString('pt-BR').split(' ').join(' Ã s ') %> </small></p>
                             

                            <a href="/noticia?id=<%= noticia.id_noticia %>" class="btn btn-primary">Saiba Mais</a>
                        </div>

                    </div>

                </div>
                <% }) %>
            </div>
        </div>


        

    </main>
    <footer class="mt-auto bg-dark">
        <p class="text-center text-white mb-0 py-2">Cel.Lep Tech Noticias 2021</p>
    </footer>
  </body>
</html>
