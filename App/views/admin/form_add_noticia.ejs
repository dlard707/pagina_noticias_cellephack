<%- include('../common/header'); %>
<%- include('../common/menu'); %>
<main class="mb-4">

    <div class="bg-light p-5 mb-4">
        <div class="container">
            <h1>Nova Noticia</h1>
        </div>
    </div>

    <div class="container">

        <form action="/admin/salvar-noticia" method="POST">
            <div class="mb-3">
                <label for="titulo" class="form-label">Titulo</label>
                <input type="text" name="titulo" id="titulo" class="form-control" placeholder="Título da noticia" autocomplete="off" required>
            </div>

            <div class="mb-3">
                <label for="conteudo" class="form-label">Conteúdo</label>
                <textarea name="conteudo" id="conteudo" class="form-control" placeholder="Conteúdo da noticia" autocomplete="off" cols="30" rows="5" style="resize:none;"></textarea>

                <input type="submit" value="Criar" class="btn btn-primary btn-lg w-100">
            </div>
        </form>
    </div>
    

</main>
<%- include('../common/footer'); %>